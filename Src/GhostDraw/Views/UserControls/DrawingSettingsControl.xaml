<UserControl x:Class="GhostDraw.Views.UserControls.DrawingSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <GroupBox Header="// DRAWING">
        <StackPanel>
            <!-- Color Palette -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                          Text="COLOR PALETTE" 
                          Foreground="#00FFFF" 
                          FontWeight="Bold"
                          FontSize="11"
                          FontFamily="Consolas"
                          VerticalAlignment="Top"
                          Margin="0,8,0,0"/>
                <StackPanel Grid.Column="1">
                    <!-- Palette Colors List in Expander -->
                    <Expander IsExpanded="False"
                             BorderBrush="#00FFFF"
                             BorderThickness="1"
                             Margin="0,0,0,12">
                        <Expander.Style>
                            <Style TargetType="Expander">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#00FFFF"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Expander">
                                            <Border BorderBrush="{TemplateBinding BorderBrush}"
                                                   BorderThickness="{TemplateBinding BorderThickness}"
                                                   Background="{TemplateBinding Background}">
                                                <DockPanel>
                                                    <!-- Header with Toggle Button -->
                                                    <ToggleButton x:Name="ExpanderToggle"
                                                                 DockPanel.Dock="Top"
                                                                 IsChecked="{Binding IsExpanded, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                                 Height="40"
                                                                 Padding="8,0,8,0"
                                                                 Background="Transparent"
                                                                 BorderThickness="0"
                                                                 HorizontalContentAlignment="Left"
                                                                 Cursor="Hand">
                                                        <ToggleButton.Template>
                                                            <ControlTemplate TargetType="ToggleButton">
                                                                <Border Background="{TemplateBinding Background}"
                                                                       Padding="{TemplateBinding Padding}"
                                                                       Height="{TemplateBinding Height}">
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="Auto"/>
                                                                            <ColumnDefinition Width="*"/>
                                                                        </Grid.ColumnDefinitions>
                                                                        <!-- Chevron Arrow -->
                                                                        <TextBlock x:Name="Arrow"
                                                                                  Grid.Column="0"
                                                                                  Text="&#xE76C;"
                                                                                  Foreground="#00FFFF"
                                                                                  FontSize="12"
                                                                                  FontFamily="Segoe MDL2 Assets"
                                                                                  VerticalAlignment="Center"
                                                                                  Margin="0,0,8,0"
                                                                                  RenderTransformOrigin="0.5,0.5">
                                                                            <TextBlock.RenderTransform>
                                                                                <RotateTransform Angle="0"/>
                                                                            </TextBlock.RenderTransform>
                                                                        </TextBlock>
                                                                        <!-- Header Content -->
                                                                        <ContentPresenter Grid.Column="1"
                                                                                        VerticalAlignment="Center"
                                                                                        HorizontalAlignment="Left"/>
                                                                    </Grid>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <!-- Rotate arrow when expanded -->
                                                                    <Trigger Property="IsChecked" Value="True">
                                                                        <Setter TargetName="Arrow" Property="RenderTransform">
                                                                            <Setter.Value>
                                                                                <RotateTransform Angle="90"/>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                    </Trigger>
                                                                    <!-- Hover effect -->
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="Arrow" Property="Foreground" Value="#FF0080"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </ToggleButton.Template>
                                                        <TextBlock Text="Edit Palette Colors"
                                                                  Foreground="#00FFFF"
                                                                  FontFamily="Consolas"
                                                                  FontSize="11"
                                                                  FontWeight="Bold"/>
                                                    </ToggleButton>
                                                    <!-- Expanded Content -->
                                                    <ContentPresenter x:Name="Content"
                                                                     DockPanel.Dock="Top"
                                                                     Visibility="Collapsed"/>
                                                </DockPanel>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsExpanded" Value="True">
                                                    <Setter TargetName="Content" Property="Visibility" Value="Visible"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Expander.Style>
                        <StackPanel Margin="8">
                            <ItemsControl x:Name="PaletteColorsItemsControl"
                                          Loaded="PaletteColorsItemsControl_Loaded">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="48"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                            
                                            <!-- Color Square -->
                                            <Border Grid.Column="0"
                                                   Width="48" 
                                                   Height="48"
                                                   BorderBrush="#00FFFF"
                                                   BorderThickness="2"
                                                   Background="{Binding}"
                                                   Cursor="Hand"
                                                   ToolTip="Click to select this color"
                                                   Tag="{Binding}"
                                                   MouseLeftButtonDown="ColorSquare_MouseLeftButtonDown">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="#00FFFF" 
                                                                    Opacity="0.4" 
                                                                    BlurRadius="8" 
                                                                    ShadowDepth="0"/>
                                                </Border.Effect>
                                                <Grid>
                                                    <!-- Position number badge -->
                                                    <Border Background="#0A0E27"
                                                           BorderBrush="#00FFFF"
                                                           BorderThickness="1"
                                                           CornerRadius="8"
                                                           Padding="4,2"
                                                           HorizontalAlignment="Left"
                                                           VerticalAlignment="Top"
                                                           Margin="2">
                                                        <TextBlock x:Name="PositionNumber"
                                                                  Text="1"
                                                                  Foreground="#00FFFF"
                                                                  FontSize="9"
                                                                  FontWeight="Bold"
                                                                  FontFamily="Consolas"/>
                                                    </Border>
                                                
                                                    <!-- Active indicator checkmark -->
                                                    <Viewbox Width="28" Height="28"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            IsHitTestVisible="False">
                                                        <TextBlock Text="&#xE73E;" 
                                                                  FontFamily="Segoe MDL2 Assets"
                                                                  Foreground="White"
                                                                  FontSize="24"
                                                                  FontWeight="Bold"
                                                                  Visibility="Collapsed">
                                                            <TextBlock.Effect>
                                                                <DropShadowEffect Color="Black" 
                                                                                BlurRadius="6" 
                                                                                ShadowDepth="2" 
                                                                                Opacity="1"/>
                                                            </TextBlock.Effect>
                                                        </TextBlock>
                                                    </Viewbox>
                                                </Grid>
                                            </Border>
                                            
                                            <!-- Control Buttons -->
                                            <StackPanel Grid.Column="1" 
                                                       Orientation="Horizontal"
                                                       Margin="8,0,0,0"
                                                       VerticalAlignment="Center">
                                                <!-- Move Up Button -->
                                                <Button Content="&#xE70E;"
                                                       Width="32"
                                                       Height="48"
                                                       FontSize="14"
                                                       FontFamily="Segoe MDL2 Assets"
                                                       FontWeight="Bold"
                                                       Padding="0"
                                                       Margin="0,0,4,0"
                                                       Background="#1A2A6D"
                                                       Foreground="#00FFFF"
                                                       BorderBrush="#00FFFF"
                                                       BorderThickness="1"
                                                       Cursor="Hand"
                                                       Click="MoveColorUpButton_Click"
                                                       Tag="{Binding}"
                                                       ToolTip="Move color up (or to end if first)">
                                                    <Button.Template>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border x:Name="border"
                                                                   Background="{TemplateBinding Background}"
                                                                   BorderBrush="{TemplateBinding BorderBrush}"
                                                                   BorderThickness="{TemplateBinding BorderThickness}">
                                                                <ContentPresenter HorizontalAlignment="Center"
                                                                                VerticalAlignment="Center"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="border" Property="Background" Value="#2A3A7D"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>
                                                
                                                <!-- Move Down Button -->
                                                <Button Content="&#xE70D;"
                                                       Width="32"
                                                       Height="48"
                                                       FontSize="14"
                                                       FontFamily="Segoe MDL2 Assets"
                                                       FontWeight="Bold"
                                                       Padding="0"
                                                       Margin="0,0,4,0"
                                                       Background="#1A2A6D"
                                                       Foreground="#00FFFF"
                                                       BorderBrush="#00FFFF"
                                                       BorderThickness="1"
                                                       Cursor="Hand"
                                                       Click="MoveColorDownButton_Click"
                                                       Tag="{Binding}"
                                                       ToolTip="Move color down (or to start if last)">
                                                    <Button.Template>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border x:Name="border"
                                                                   Background="{TemplateBinding Background}"
                                                                   BorderBrush="{TemplateBinding BorderBrush}"
                                                                   BorderThickness="{TemplateBinding BorderThickness}">
                                                                <ContentPresenter HorizontalAlignment="Center"
                                                                                VerticalAlignment="Center"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="border" Property="Background" Value="#2A3A7D"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>
                                                
                                                <!-- Remove Button -->
                                                <Button Content="&#xE74D;"
                                                       Width="32"
                                                       Height="48"
                                                       FontSize="14"
                                                       FontFamily="Segoe MDL2 Assets"
                                                       FontWeight="Bold"
                                                       Padding="0"
                                                       Background="#FF0080"
                                                       Foreground="White"
                                                       BorderBrush="#FF1493"
                                                       BorderThickness="1"
                                                       Cursor="Hand"
                                                       Click="RemoveColorButton_Click"
                                                       Tag="{Binding}"
                                                       ToolTip="Remove color from palette">
                                                    <Button.Template>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border x:Name="border"
                                                                   Background="{TemplateBinding Background}"
                                                                   BorderBrush="{TemplateBinding BorderBrush}"
                                                                   BorderThickness="{TemplateBinding BorderThickness}">
                                                                <ContentPresenter HorizontalAlignment="Center"
                                                                                VerticalAlignment="Center"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="border" Property="Background" Value="#FF1493"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <!-- Add Color Button -->
                            <Button x:Name="AddColorButton"
                                   Content="+ ADD COLOR"
                                   Style="{StaticResource ModernButton}"
                                   Click="AddColorButton_Click"
                                   Margin="0,8,0,0"
                                   HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </Grid>

            <TextBlock Text="// Right-click while drawing to cycle through palette"
                      Foreground="#606060"
                      FontSize="10"
                      FontFamily="Consolas"
                      Margin="140,0,0,16"/>

            <!-- Min/Max Thickness Range -->
            <Grid Margin="0,16,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                          Text="THICKNESS RANGE" 
                          Foreground="#00FFFF" 
                          FontWeight="Bold"
                          FontSize="11"
                          FontFamily="Consolas"
                          VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal">
                    <!-- MIN Control -->
                    <TextBlock Text="MIN:"
                              Foreground="#808080"
                              FontFamily="Consolas"
                              FontSize="11"
                              VerticalAlignment="Center"
                              Margin="0,0,8,0"/>
                    <Border BorderBrush="#00FFFF"
                           BorderThickness="1"
                           Background="#1A1A2E">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="MinThicknessTextBox"
                                    Grid.Column="0"
                                    Background="Transparent"
                                    Foreground="White"
                                    BorderThickness="0"
                                    FontFamily="Consolas"
                                    FontSize="12"
                                    Padding="0,10,0,0"
                                    VerticalAlignment="Center"
                                    TextAlignment="Center"
                                    Height="32"
                                    PreviewTextInput="NumericTextBox_PreviewTextInput"
                                    TextChanged="MinThicknessTextBox_TextChanged"/>
                            <StackPanel Grid.Column="1" 
                                       Width="20"
                                       Background="#0D111D">
                                <Button x:Name="MinUpButton"
                                       Content="+"
                                       Click="MinUpButton_Click"
                                       Height="16"
                                       Padding="0"
                                       FontSize="10"
                                       FontWeight="Bold"
                                       FontFamily="Consolas"
                                       Background="#1A1A2E"
                                       Foreground="#00FFFF"
                                       BorderThickness="0"
                                       Cursor="Hand"/>
                                <Button x:Name="MinDownButton"
                                       Content="-"
                                       Click="MinDownButton_Click"
                                       Height="16"
                                       Padding="0"
                                       FontSize="10"
                                       FontWeight="Bold"
                                       FontFamily="Consolas"
                                       Background="#1A1A2E"
                                       Foreground="#00FFFF"
                                       BorderThickness="0"
                                       Cursor="Hand"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- MAX Control -->
                    <TextBlock Text="MAX:"
                              Foreground="#808080"
                              FontFamily="Consolas"
                              FontSize="11"
                              VerticalAlignment="Center"
                              Margin="16,0,8,0"/>
                    <Border BorderBrush="#00FFFF"
                           BorderThickness="1"
                           Background="#1A1A2E">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="MaxThicknessTextBox"
                                    Grid.Column="0"
                                    Background="Transparent"
                                    Foreground="White"
                                    BorderThickness="0"
                                    FontFamily="Consolas"
                                    FontSize="12"
                                    VerticalAlignment="Center"
                                    TextAlignment="Center"
                                    Padding="0,10,0,0"
                                    Height="32"
                                    PreviewTextInput="NumericTextBox_PreviewTextInput"
                                    TextChanged="MaxThicknessTextBox_TextChanged"/>
                            <StackPanel Grid.Column="1" 
                                       Width="20"
                                       Background="#0D111D">
                                <Button x:Name="MaxUpButton"
                                       Content="+"
                                       Click="MaxUpButton_Click"
                                       Height="16"
                                       Padding="0"
                                       FontSize="10"
                                       FontWeight="Bold"
                                       FontFamily="Consolas"
                                       Background="#1A1A2E"
                                       Foreground="#00FFFF"
                                       BorderThickness="0"
                                       Cursor="Hand"/>
                                <Button x:Name="MaxDownButton"
                                       Content="-"
                                       Click="MaxDownButton_Click"
                                       Height="16"
                                       Padding="0"
                                       FontSize="10"
                                       FontWeight="Bold"
                                       FontFamily="Consolas"
                                       Background="#1A1A2E"
                                       Foreground="#00FFFF"
                                       BorderThickness="0"
                                       Cursor="Hand"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>
            
            <!-- Brush Thickness -->
            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                          Text="THICKNESS" 
                          Foreground="#00FFFF" 
                          FontWeight="Bold"
                          FontSize="11"
                          FontFamily="Consolas"
                          VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal">
                    <Slider x:Name="ThicknessSlider"
                           Width="300"
                           Minimum="1"
                           Maximum="20"
                           TickFrequency="1"
                           IsSnapToTickEnabled="True"
                           ValueChanged="ThicknessSlider_ValueChanged"
                           Foreground="#FF0080"
                           VerticalAlignment="Center"/>
                    <Border Background="#FF0080"
                           BorderBrush="#FF1493"
                           BorderThickness="1"
                           Padding="12,6"
                           Margin="16,0,0,0">
                        <Border.Effect>
                            <DropShadowEffect Color="#FF0080" 
                                            Opacity="0.7" 
                                            BlurRadius="10" 
                                            ShadowDepth="0"/>
                        </Border.Effect>
                        <TextBlock x:Name="ThicknessValueText"
                                  Text="3 px"
                                  Foreground="White"
                                  FontWeight="Bold"
                                  FontFamily="Consolas"
                                  FontSize="12"
                                  MinWidth="45"
                                  TextAlignment="Center"/>
                    </Border>
                </StackPanel>
            </Grid>

            <TextBlock Text="// Use mouse wheel while drawing"
                      Foreground="#606060"
                      FontSize="10"
                      FontFamily="Consolas"
                      Margin="140,4,0,0"/>
        </StackPanel>
    </GroupBox>
</UserControl>
