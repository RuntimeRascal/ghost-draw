<UserControl x:Class="GhostDraw.Views.UserControls.DrawingSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/CyberpunkStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <GroupBox Header="// DRAWING">
        <StackPanel>
            <!-- Brush Color -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                          Text="BRUSH COLOR" 
                          Foreground="#00FFFF" 
                          FontWeight="Bold"
                          FontSize="11"
                          FontFamily="Consolas"
                          VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal">
                    <Border x:Name="ColorPreview" 
                           Width="48" 
                           Height="48"
                           BorderBrush="#00FFFF"
                           BorderThickness="2"
                           Margin="0,0,16,0">
                        <Border.Effect>
                            <DropShadowEffect Color="#00FFFF" 
                                            Opacity="0.6" 
                                            BlurRadius="12" 
                                            ShadowDepth="0"/>
                        </Border.Effect>
                    </Border>
                    <Button x:Name="ChooseColorButton"
                           Content="SELECT"
                           Style="{StaticResource ModernButton}"
                           Click="ChooseColorButton_Click"
                           VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <!-- Brush Thickness -->
            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                          Text="THICKNESS" 
                          Foreground="#00FFFF" 
                          FontWeight="Bold"
                          FontSize="11"
                          FontFamily="Consolas"
                          VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal">
                    <Slider x:Name="ThicknessSlider"
                           Width="300"
                           Minimum="1"
                           Maximum="20"
                           TickFrequency="1"
                           IsSnapToTickEnabled="True"
                           ValueChanged="ThicknessSlider_ValueChanged"
                           Foreground="#FF0080"
                           VerticalAlignment="Center"/>
                    <Border Background="#FF0080"
                           BorderBrush="#FF1493"
                           BorderThickness="1"
                           Padding="12,6"
                           Margin="16,0,0,0">
                        <Border.Effect>
                            <DropShadowEffect Color="#FF0080" 
                                            Opacity="0.7" 
                                            BlurRadius="10" 
                                            ShadowDepth="0"/>
                        </Border.Effect>
                        <TextBlock x:Name="ThicknessValueText"
                                  Text="3 px"
                                  Foreground="White"
                                  FontWeight="Bold"
                                  FontFamily="Consolas"
                                  FontSize="12"
                                  MinWidth="45"
                                  TextAlignment="Center"/>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Min/Max Thickness Range -->
            <Grid Margin="0,16,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                          Text="RANGE" 
                          Foreground="#00FFFF" 
                          FontWeight="Bold"
                          FontSize="11"
                          FontFamily="Consolas"
                          VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal">
                    <!-- MIN Control -->
                    <TextBlock Text="MIN:"
                              Foreground="#808080"
                              FontFamily="Consolas"
                              FontSize="11"
                              VerticalAlignment="Center"
                              Margin="0,0,8,0"/>
                    <Border BorderBrush="#00FFFF"
                           BorderThickness="1"
                           Background="#1A1A2E">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="MinThicknessTextBox"
                                    Grid.Column="0"
                                    Background="Transparent"
                                    Foreground="White"
                                    BorderThickness="0"
                                    FontFamily="Consolas"
                                    FontSize="12"
                                    VerticalAlignment="Center"
                                    TextAlignment="Center"
                                    Height="32"
                                    PreviewTextInput="NumericTextBox_PreviewTextInput"
                                    TextChanged="MinThicknessTextBox_TextChanged"/>
                            <StackPanel Grid.Column="1" 
                                       Width="20"
                                       Background="#0D111D">
                                <Button x:Name="MinUpButton"
                                       Content="+"
                                       Click="MinUpButton_Click"
                                       Height="16"
                                       Padding="0"
                                       FontSize="10"
                                       FontWeight="Bold"
                                       FontFamily="Consolas"
                                       Background="#1A1A2E"
                                       Foreground="#00FFFF"
                                       BorderThickness="0"
                                       Cursor="Hand"/>
                                <Button x:Name="MinDownButton"
                                       Content="-"
                                       Click="MinDownButton_Click"
                                       Height="16"
                                       Padding="0"
                                       FontSize="10"
                                       FontWeight="Bold"
                                       FontFamily="Consolas"
                                       Background="#1A1A2E"
                                       Foreground="#00FFFF"
                                       BorderThickness="0"
                                       Cursor="Hand"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- MAX Control -->
                    <TextBlock Text="MAX:"
                              Foreground="#808080"
                              FontFamily="Consolas"
                              FontSize="11"
                              VerticalAlignment="Center"
                              Margin="16,0,8,0"/>
                    <Border BorderBrush="#00FFFF"
                           BorderThickness="1"
                           Background="#1A1A2E">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="MaxThicknessTextBox"
                                    Grid.Column="0"
                                    Background="Transparent"
                                    Foreground="White"
                                    BorderThickness="0"
                                    FontFamily="Consolas"
                                    FontSize="12"
                                    VerticalAlignment="Center"
                                    TextAlignment="Center"
                                    Height="32"
                                    PreviewTextInput="NumericTextBox_PreviewTextInput"
                                    TextChanged="MaxThicknessTextBox_TextChanged"/>
                            <StackPanel Grid.Column="1" 
                                       Width="20"
                                       Background="#0D111D">
                                <Button x:Name="MaxUpButton"
                                       Content="+"
                                       Click="MaxUpButton_Click"
                                       Height="16"
                                       Padding="0"
                                       FontSize="10"
                                       FontWeight="Bold"
                                       FontFamily="Consolas"
                                       Background="#1A1A2E"
                                       Foreground="#00FFFF"
                                       BorderThickness="0"
                                       Cursor="Hand"/>
                                <Button x:Name="MaxDownButton"
                                       Content="-"
                                       Click="MaxDownButton_Click"
                                       Height="16"
                                       Padding="0"
                                       FontSize="10"
                                       FontWeight="Bold"
                                       FontFamily="Consolas"
                                       Background="#1A1A2E"
                                       Foreground="#00FFFF"
                                       BorderThickness="0"
                                       Cursor="Hand"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>

            <TextBlock Text="// Use mouse wheel while drawing"
                      Foreground="#606060"
                      FontSize="10"
                      FontFamily="Consolas"
                      Margin="140,4,0,0"/>
        </StackPanel>
    </GroupBox>
</UserControl>
