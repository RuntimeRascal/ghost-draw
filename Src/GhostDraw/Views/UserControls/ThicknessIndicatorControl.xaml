<UserControl x:Class="GhostDraw.Views.UserControls.ThicknessIndicatorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             d:DesignHeight="120" d:DesignWidth="240">
    <Border x:Name="Root"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Padding="16,10"
            Background="#1A1A2E"
            BorderBrush="#FF0080"
            BorderThickness="2"
            CornerRadius="4"
            Opacity="0"
            IsHitTestVisible="False">
        <Border.Effect>
            <DropShadowEffect Color="#FF0080" 
                              Opacity="0.7" 
                              BlurRadius="15" 
                              ShadowDepth="0"/>
        </Border.Effect>
        <TextBlock x:Name="ThicknessIndicatorText"
                   FontFamily="Segoe UI"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#FF0080"
                   Text="3 px"/>
    </Border>
</UserControl>
