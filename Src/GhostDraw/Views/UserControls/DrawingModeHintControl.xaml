<UserControl x:Class="GhostDraw.Views.UserControls.DrawingModeHintControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             d:DesignHeight="140" d:DesignWidth="320">
    <Border x:Name="Root"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Padding="20,12"
            Background="#1A1A2E"
            BorderBrush="#808080"
            BorderThickness="1"
            CornerRadius="4"
            Opacity="0"
            IsHitTestVisible="False">
        <Border.Effect>
            <DropShadowEffect Color="#808080" 
                              Opacity="0.5" 
                              BlurRadius="10" 
                              ShadowDepth="0"/>
        </Border.Effect>
        <TextBlock x:Name="HintText"
                   FontFamily="Segoe UI"
                   FontSize="16"
                   Foreground="#B0B0B0"
                   Text="Press Delete to clear canvas  |  ESC to exit"/>
    </Border>
</UserControl>
