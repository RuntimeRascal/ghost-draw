<Window x:Class="GhostDraw.Views.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GhostDraw"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        Width="680"
        Height="360">
    <!-- Outer glow to match settings window neon frame -->
    <Grid Margin="30">
        <Border CornerRadius="0"
                BorderThickness="10"
                Opacity="0.9">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF0080" Offset="0"/>
                    <GradientStop Color="#00FFFF" Offset="0.5"/>
                    <GradientStop Color="#FF0080" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Effect>
                <BlurEffect Radius="20"/>
            </Border.Effect>
        </Border>

        <Border CornerRadius="0"
                BorderThickness="2">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF0080" Offset="0"/>
                    <GradientStop Color="#00FFFF" Offset="0.5"/>
                    <GradientStop Color="#FF0080" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#0A0E27" Offset="0.0"/>
                    <GradientStop Color="#16213E" Offset="0.5"/>
                    <GradientStop Color="#0A0E27" Offset="1.0"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid ClipToBounds="True" Margin="12">
                <Image Source="pack://application:,,,/Assets/splash-screen.png" Stretch="UniformToFill" />

                <Border Background="#AA0B0C10"
                        CornerRadius="6"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Margin="55,0,45,15"
                        Padding="16,12">
                    <StackPanel>
                        <TextBlock Text="Press HOTKEY to activate draw mode" Foreground="#E6FFFFFF" FontSize="14" Margin="0,0,0,6" />
                        <TextBlock Text="ESC or HOTKEY to exit draw mode" Foreground="#CCFFFFFF" FontSize="12" />
                        <TextBlock Text="F1 in draw mode for help" Foreground="#CCFFFFFF" FontSize="12" />
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
