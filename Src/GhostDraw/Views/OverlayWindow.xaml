<Window x:Class="GhostDraw.Views.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GhostDraw Overlay"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        WindowState="Maximized"
        ResizeMode="NoResize">
    <Grid>
        <Canvas x:Name="DrawingCanvas">
            <Canvas.Background>
                <SolidColorBrush Color="White" Opacity="0.01"/>
            </Canvas.Background>
        </Canvas>
        
        <!-- Thickness Indicator (top-right corner, cyberpunk style) -->
        <Border x:Name="ThicknessIndicatorBorder"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,30,30,0"
                Padding="16,10"
                Background="#1A1A2E"
                BorderBrush="#FF0080"
                BorderThickness="2"
                CornerRadius="4"
                Opacity="0"
                IsHitTestVisible="False">
            <Border.Effect>
                <DropShadowEffect Color="#FF0080" 
                                  Opacity="0.7" 
                                  BlurRadius="15" 
                                  ShadowDepth="0"/>
            </Border.Effect>
            <TextBlock x:Name="ThicknessIndicatorText"
                       FontFamily="Segoe UI"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#FF0080"
                       Text="3 px"/>
        </Border>
        
        <!-- Canvas Cleared Toast (center of screen, cyberpunk style) -->
        <Border x:Name="CanvasClearedToastBorder"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="24,16"
                Background="#1A1A2E"
                BorderBrush="#00FF88"
                BorderThickness="2"
                CornerRadius="4"
                Opacity="0"
                IsHitTestVisible="False">
            <Border.Effect>
                <DropShadowEffect Color="#00FF88" 
                                  Opacity="0.7" 
                                  BlurRadius="20" 
                                  ShadowDepth="0"/>
            </Border.Effect>
            <TextBlock x:Name="CanvasClearedToastText"
                       FontFamily="Segoe UI"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#00FF88"
                       Text="Canvas Cleared"/>
        </Border>
        
        <!-- Drawing Mode Hint (center of screen, fades out on activation) -->
        <Border x:Name="DrawingModeHintBorder"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="0,0,0,100"
                Padding="20,12"
                Background="#1A1A2E"
                BorderBrush="#808080"
                BorderThickness="1"
                CornerRadius="4"
                Opacity="0"
                IsHitTestVisible="False">
            <Border.Effect>
                <DropShadowEffect Color="#808080" 
                                  Opacity="0.5" 
                                  BlurRadius="10" 
                                  ShadowDepth="0"/>
            </Border.Effect>
            <TextBlock FontFamily="Segoe UI"
                       FontSize="16"
                       Foreground="#B0B0B0"
                       Text="Press R to clear canvas  |  ESC to exit"/>
        </Border>

        <!-- Screenshot Saved Toast (top-center of screen, cyberpunk style) -->
        <Border x:Name="ScreenshotSavedToastBorder"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,30,0,0"
                Padding="24,16"
                Background="#1A1A2E"
                BorderBrush="#00FFFF"
                BorderThickness="2"
                CornerRadius="4"
                Opacity="0"
                IsHitTestVisible="False">
            <Border.Effect>
                <DropShadowEffect Color="#00FFFF" 
                                  Opacity="0.7" 
                                  BlurRadius="20" 
                                  ShadowDepth="0"/>
            </Border.Effect>
            <TextBlock x:Name="ScreenshotSavedToastText"
                       FontFamily="Segoe UI"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#00FFFF"
                       Text="ðŸ“¸ Screenshot Saved!"/>
        </Border>

        <!-- Help Popup (center of screen, shows keyboard shortcuts) -->
        <Border x:Name="HelpPopupBorder"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="32,24"
                Background="#0F1419"
                BorderBrush="#00FFFF"
                BorderThickness="2"
                CornerRadius="8"
                Opacity="0"
                IsHitTestVisible="False">
            <Border.Effect>
                <DropShadowEffect Color="#00FFFF" 
                                  Opacity="0.8" 
                                  BlurRadius="25" 
                                  ShadowDepth="0"/>
            </Border.Effect>
            <StackPanel>
                <!-- Header -->
                <TextBlock FontFamily="Consolas"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#00FFFF"
                           Text="KEYBOARD SHORTCUTS"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,16"/>
                
                <!-- Activation Hotkey -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBlock FontFamily="Consolas"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#FF0080"
                               Text="{Binding HotkeyDisplayName, RelativeSource={RelativeSource AncestorType=Window}}"
                               MinWidth="120"
                               Margin="0,0,16,0"/>
                    <TextBlock FontFamily="Segoe UI"
                               FontSize="16"
                               Foreground="#B0B0B0"
                               Text="Activate / Deactivate Draw Mode"/>
                </StackPanel>

                <!-- Separator -->
                <Border Height="1" Background="#404040" Margin="0,8,0,12"/>

                <!-- Drawing Tools -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock FontFamily="Consolas"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#00FF88"
                               Text="P"
                               MinWidth="120"
                               Margin="0,0,16,0"/>
                    <TextBlock FontFamily="Segoe UI"
                               FontSize="16"
                               Foreground="#B0B0B0"
                               Text="Select Pen Tool"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock FontFamily="Consolas"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#00FF88"
                               Text="L"
                               MinWidth="120"
                               Margin="0,0,16,0"/>
                    <TextBlock FontFamily="Segoe UI"
                               FontSize="16"
                               Foreground="#B0B0B0"
                               Text="Select Line Tool"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock FontFamily="Consolas"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#00FF88"
                               Text="E"
                               MinWidth="120"
                               Margin="0,0,16,0"/>
                    <TextBlock FontFamily="Segoe UI"
                               FontSize="16"
                               Foreground="#B0B0B0"
                               Text="Select Eraser Tool"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock FontFamily="Consolas"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#00FF88"
                               Text="U"
                               MinWidth="120"
                               Margin="0,0,16,0"/>
                    <TextBlock FontFamily="Segoe UI"
                               FontSize="16"
                               Foreground="#B0B0B0"
                               Text="Select Rectangle Tool"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock FontFamily="Consolas"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#00FF88"
                               Text="C"
                               MinWidth="120"
                               Margin="0,0,16,0"/>
                    <TextBlock FontFamily="Segoe UI"
                               FontSize="16"
                               Foreground="#B0B0B0"
                               Text="Select Circle Tool"/>
                </StackPanel>

                <!-- Separator -->
                <Border Height="1" Background="#404040" Margin="0,8,0,12"/>

                <!-- Drawing Actions -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock FontFamily="Consolas"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#FFAA00"
                               Text="Right Click"
                               MinWidth="120"
                               Margin="0,0,16,0"/>
                    <TextBlock FontFamily="Segoe UI"
                               FontSize="16"
                               Foreground="#B0B0B0"
                               Text="Cycle Brush Color"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock FontFamily="Consolas"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#FFAA00"
                               Text="Mouse Wheel"
                               MinWidth="120"
                               Margin="0,0,16,0"/>
                    <TextBlock FontFamily="Segoe UI"
                               FontSize="16"
                               Foreground="#B0B0B0"
                               Text="Adjust Brush Thickness"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock FontFamily="Consolas"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#FFAA00"
                               Text="R"
                               MinWidth="120"
                               Margin="0,0,16,0"/>
                    <TextBlock FontFamily="Segoe UI"
                               FontSize="16"
                               Foreground="#B0B0B0"
                               Text="Clear Canvas"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock FontFamily="Consolas"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#FFAA00"
                               Text="Ctrl+Z"
                               MinWidth="120"
                               Margin="0,0,16,0"/>
                    <TextBlock FontFamily="Segoe UI"
                               FontSize="16"
                               Foreground="#B0B0B0"
                               Text="Undo Last Action"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock FontFamily="Consolas"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#FFAA00"
                               Text="Ctrl+S"
                               MinWidth="120"
                               Margin="0,0,16,0"/>
                    <TextBlock FontFamily="Segoe UI"
                               FontSize="16"
                               Foreground="#B0B0B0"
                               Text="Full Screenshot"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock FontFamily="Consolas"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#FFAA00"
                               Text="S"
                               MinWidth="120"
                               Margin="0,0,16,0"/>
                    <TextBlock FontFamily="Segoe UI"
                               FontSize="16"
                               Foreground="#B0B0B0"
                               Text="Open Snip Tool"/>
                </StackPanel>

                <!-- Separator -->
                <Border Height="1" Background="#404040" Margin="0,8,0,12"/>

                <!-- System -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock FontFamily="Consolas"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#FF4444"
                               Text="ESC"
                               MinWidth="120"
                               Margin="0,0,16,0"/>
                    <TextBlock FontFamily="Segoe UI"
                               FontSize="16"
                               Foreground="#B0B0B0"
                               Text="Close Help / Exit Draw Mode"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                    <TextBlock FontFamily="Consolas"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#00FFFF"
                               Text="F1"
                               MinWidth="120"
                               Margin="0,0,16,0"/>
                    <TextBlock FontFamily="Segoe UI"
                               FontSize="16"
                               Foreground="#B0B0B0"
                               Text="Toggle This Help"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
