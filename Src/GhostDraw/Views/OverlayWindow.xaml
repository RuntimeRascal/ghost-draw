<Window x:Class="GhostDraw.Views.OverlayWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:uc="clr-namespace:GhostDraw.Views.UserControls"
    Title="GhostDraw Overlay"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
    WindowState="Normal"
    WindowStartupLocation="Manual"
        ResizeMode="NoResize">
    <Grid>
        <Canvas x:Name="DrawingCanvas">
            <Canvas.Background>
                <SolidColorBrush Color="White" Opacity="0.01"/>
            </Canvas.Background>
        </Canvas>
        
        <uc:ThicknessIndicatorControl x:Name="ThicknessIndicator"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Top"
                                       Margin="0,30,30,0"/>

        <uc:CanvasClearedToastControl x:Name="CanvasClearedToast"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>

        <uc:DrawingModeHintControl x:Name="DrawingModeHint"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Bottom"
                                    Margin="0,0,0,100"/>

        <uc:ScreenshotSavedToastControl x:Name="ScreenshotSavedToast"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Top"
                                         Margin="0,30,0,0"/>

        <Grid x:Name="ClearCanvasModalHost" Visibility="Collapsed">
            <Border Background="Black" Opacity="0.7"/>
            <uc:ClearCanvasConfirmationControl x:Name="ClearCanvasConfirmation"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
        </Grid>

        <uc:HelpPopupControl x:Name="HelpPopup"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
    </Grid>
</Window>
