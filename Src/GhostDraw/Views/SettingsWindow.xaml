<Window x:Class="GhostDraw.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:uc="clr-namespace:GhostDraw.Views.UserControls"
        Title="GhostDraw Settings" 
        Height="800" 
        Width="740"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/CyberpunkStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <!-- Main container -->
    <Grid Margin="30">
        <!-- Blurred background border for subtle glow effect - positioned to overlap the main border -->
        <Border CornerRadius="0" 
                BorderThickness="10"
                Opacity="0.9">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF0080" Offset="0"/>
                    <GradientStop Color="#00FFFF" Offset="0.5"/>
                    <GradientStop Color="#FF0080" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Effect>
                <BlurEffect Radius="20"/>
            </Border.Effect>
        </Border>

        <!-- Main window content -->
        <Border CornerRadius="0" 
                BorderThickness="2">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF0080" Offset="0"/>
                    <GradientStop Color="#00FFFF" Offset="0.5"/>
                    <GradientStop Color="#FF0080" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#0A0E27" Offset="0.0"/>
                    <GradientStop Color="#16213E" Offset="0.5"/>
                    <GradientStop Color="#0A0E27" Offset="1.0"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Cyberpunk Title Bar -->
                <Border Grid.Row="0" 
                        Height="70"
                        BorderThickness="0,0,0,2"
                        MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                    <Border.BorderBrush>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#FF0080" Offset="0"/>
                            <GradientStop Color="#00FFFF" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0" Opacity="0.3">
                            <GradientStop Color="#FF0080" Offset="0"/>
                            <GradientStop Color="#00FFFF" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Logo and Cyberpunk Title -->
                        <StackPanel Grid.Column="0" 
                                   Orientation="Horizontal" 
                                   Margin="24,0,0,0" 
                                   VerticalAlignment="Center">
                            <Image Source="Assets/ghost-draw-icon.png" 
                                   Width="48"
                                   Height="48"
                                   Margin="0,0,12,0"
                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                            <StackPanel>
                                <TextBlock FontSize="20" 
                                           FontWeight="Bold" 
                                           FontFamily="Segoe UI">
                                    <Run Text="GHOST" Foreground="#FF0080"/>
                                    <Run Text="DRAW" Foreground="#00FFFF"/>
                                </TextBlock>
                                <TextBlock Text="// SETTINGS //" 
                                           FontSize="10" 
                                           Foreground="#808080"
                                           FontFamily="Consolas"
                                           Margin="0,-4,0,0"
                                           FontWeight="Bold"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Neon Close Button -->
                        <Button Grid.Column="2" 
                                Content="X" 
                                Style="{StaticResource CloseButton}"
                                Click="CloseButton_Click"
                                Margin="0,0,16,0"
                                ToolTip="Close"/>
                    </Grid>
                </Border>

                <!-- Content Area -->
                <ScrollViewer Grid.Row="1" 
                             VerticalScrollBarVisibility="Auto"
                             Margin="28,12,20,28">
                    <ScrollViewer.Resources>
                        <Style TargetType="ScrollViewer">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ScrollViewer">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <ScrollContentPresenter Grid.Column="0"/>
                                            <ScrollBar Grid.Column="1" 
                                                      x:Name="PART_VerticalScrollBar"
                                                      Style="{StaticResource CyberScrollBar}"
                                                      Value="{TemplateBinding VerticalOffset}"
                                                      Maximum="{TemplateBinding ScrollableHeight}"
                                                      ViewportSize="{TemplateBinding ViewportHeight}"
                                                      Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"
                                                      Margin="10,0,0,0"/>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ScrollViewer.Resources>

                    <StackPanel x:Name="SettingsStackPanel" Margin="0,15,15,0">
                        <!-- UserControls and action buttons will be added programmatically from code-behind -->
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
