<Window x:Class="GhostDraw.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GhostDraw Settings" 
        Height="800" 
        Width="740"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    
    <Window.Resources>
        <!-- Cyberpunk Neon Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#1A1A2E"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FF0080"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#FF0080" 
                                                Opacity="0.6" 
                                                BlurRadius="12" 
                                                ShadowDepth="0"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF0080"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF1493"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#FF0080" 
                                                        Opacity="1" 
                                                        BlurRadius="20" 
                                                        ShadowDepth="0"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Cyberpunk Close Button -->
        <Style x:Key="CloseButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#00FFFF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#00FFFF"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="0">
                            <Border.Effect>
                                <DropShadowEffect Color="#00FFFF" 
                                                Opacity="0.5" 
                                                BlurRadius="10" 
                                                ShadowDepth="0"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#00FFFF"/>
                                <Setter Property="Foreground" Value="#0A0E27"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#00FFFF" 
                                                        Opacity="1" 
                                                        BlurRadius="20" 
                                                        ShadowDepth="0"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Cyberpunk Neon ScrollBar -->
        <Style x:Key="CyberScrollBar" TargetType="{x:Type ScrollBar}">
            <Setter Property="Background" Value="#0D111D"/>
            <Setter Property="Width" Value="6"/>
            <Setter Property="MinWidth" Value="6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid>
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="3"/>
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Style>
                                            <Style TargetType="Thumb">
                                                <Setter Property="Background" Value="#FF0080"/>
                                                <Setter Property="BorderThickness" Value="0"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Thumb">
                                                            <Border Background="{TemplateBinding Background}"
                                                                    CornerRadius="3">
                                                                <Border.Effect>
                                                                    <DropShadowEffect Color="#FF0080" 
                                                                                    Opacity="0.8" 
                                                                                    BlurRadius="8" 
                                                                                    ShadowDepth="0"/>
                                                                </Border.Effect>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#FF1493"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Thumb.Style>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Cyberpunk GroupBox with Neon Border -->
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#00FFFF"/>
            <Setter Property="Padding" Value="20,16"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Neon Border Card -->
                            <Border Grid.Row="0" Grid.RowSpan="2"
                                    Background="#0D111D"
                                    BorderBrush="#00FFFF"
                                    BorderThickness="1"
                                    CornerRadius="0"
                                    Margin="0,12,0,0">
                                <Border.Effect>
                                    <DropShadowEffect Color="#00FFFF" 
                                                    Opacity="0.4" 
                                                    BlurRadius="15" 
                                                    ShadowDepth="0"/>
                                </Border.Effect>
                            </Border>
                            
                            <!-- Neon Pink Header -->
                            <Border Grid.Row="0"
                                    Background="#1A1A2E"
                                    BorderBrush="#FF0080"
                                    BorderThickness="0,0,0,2"
                                    Padding="16,8"
                                    HorizontalAlignment="Left"
                                    Margin="20,-4,0,0">
                                <Border.Effect>
                                    <DropShadowEffect Color="#FF0080" 
                                                    Opacity="0.7" 
                                                    BlurRadius="12" 
                                                    ShadowDepth="0"/>
                                </Border.Effect>
                                <TextBlock Text="{TemplateBinding Header}"
                                          Foreground="#FF0080"
                                          FontWeight="Bold"
                                          FontSize="13"
                                          FontFamily="Segoe UI"
                                          Effect="{x:Null}"/>
                            </Border>
                            
                            <ContentPresenter Grid.Row="1" 
                                            Margin="{TemplateBinding Padding}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Cyberpunk CheckBox -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Cyberpunk ComboBox Style -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#1A1A2E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#00FFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Foreground="{TemplateBinding Foreground}"
                                        Focusable="False"
                                        IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                        ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="20"/>
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Grid.Column="0"
                                                                Margin="8,0,0,0"
                                                                VerticalAlignment="Center"/>
                                                <Path Grid.Column="1"
                                                      Data="M 0 0 L 4 4 L 8 0 Z"
                                                      Fill="#00FFFF"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="BorderBrush" Value="#FF0080"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite"
                                            Content="{TemplateBinding SelectionBoxItem}"
                                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                            ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                            Margin="8,0,23,0"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"
                                            IsHitTestVisible="False"/>
                            <Popup x:Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Grid x:Name="DropDown"
                                      SnapsToDevicePixels="True"
                                      MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="300">
                                    <Border x:Name="DropDownBorder"
                                            Background="#1A1A2E"
                                            BorderBrush="#00FFFF"
                                            BorderThickness="1">
                                        <Border.Effect>
                                            <DropShadowEffect Color="#00FFFF" 
                                                            Opacity="0.6" 
                                                            BlurRadius="15" 
                                                            ShadowDepth="0"/>
                                        </Border.Effect>
                                        <ScrollViewer Margin="4"
                                                    SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True"
                                                       KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Cyberpunk ComboBoxItem Style -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#1A1A2E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF0080"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF0080"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
    </Window.Resources>

    <!-- Main container -->
    <Grid Margin="30">
        <!-- Blurred background border for subtle glow effect - positioned to overlap the main border -->
        <Border CornerRadius="0" 
                BorderThickness="10"
                Opacity="0.9">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF0080" Offset="0"/>
                    <GradientStop Color="#00FFFF" Offset="0.5"/>
                    <GradientStop Color="#FF0080" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Effect>
                <BlurEffect Radius="20"/>
            </Border.Effect>
        </Border>

        <!-- Main window content -->
        <Border CornerRadius="0" 
                BorderThickness="2">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF0080" Offset="0"/>
                    <GradientStop Color="#00FFFF" Offset="0.5"/>
                    <GradientStop Color="#FF0080" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#0A0E27" Offset="0.0"/>
                    <GradientStop Color="#16213E" Offset="0.5"/>
                    <GradientStop Color="#0A0E27" Offset="1.0"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Cyberpunk Title Bar -->
                <Border Grid.Row="0" 
                        Height="70"
                        BorderThickness="0,0,0,2"
                        MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                    <Border.BorderBrush>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#FF0080" Offset="0"/>
                            <GradientStop Color="#00FFFF" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0" Opacity="0.3">
                            <GradientStop Color="#FF0080" Offset="0"/>
                            <GradientStop Color="#00FFFF" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Logo and Cyberpunk Title -->
                        <StackPanel Grid.Column="0" 
                                   Orientation="Horizontal" 
                                   Margin="24,0,0,0" 
                                   VerticalAlignment="Center">
                            <Image Source="Assets/ghost-draw-icon.png" 
                                   Width="48"
                                   Height="48"
                                   Margin="0,0,12,0"
                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                            <StackPanel>
                                <TextBlock FontSize="20" 
                                           FontWeight="Bold" 
                                           FontFamily="Segoe UI">
                                    <Run Text="GHOST" Foreground="#FF0080"/>
                                    <Run Text="DRAW" Foreground="#00FFFF"/>
                                </TextBlock>
                                <TextBlock Text="// SETTINGS //" 
                                           FontSize="10" 
                                           Foreground="#808080"
                                           FontFamily="Consolas"
                                           Margin="0,-4,0,0"
                                           FontWeight="Bold"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Neon Close Button -->
                        <Button Grid.Column="2" 
                                Content="X" 
                                Style="{StaticResource CloseButton}"
                                Click="CloseButton_Click"
                                Margin="0,0,16,0"
                                ToolTip="Close"/>
                    </Grid>
                </Border>

                <!-- Content Area -->
                <ScrollViewer Grid.Row="1" 
                             VerticalScrollBarVisibility="Auto"
                             Margin="28,12,20,28">
                    <ScrollViewer.Resources>
                        <Style TargetType="ScrollViewer">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ScrollViewer">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <ScrollContentPresenter Grid.Column="0"/>
                                            <ScrollBar Grid.Column="1" 
                                                      x:Name="PART_VerticalScrollBar"
                                                      Style="{StaticResource CyberScrollBar}"
                                                      Value="{TemplateBinding VerticalOffset}"
                                                      Maximum="{TemplateBinding ScrollableHeight}"
                                                      ViewportSize="{TemplateBinding ViewportHeight}"
                                                      Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"
                                                      Margin="10,0,0,0"/>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ScrollViewer.Resources>

                    <StackPanel Margin="0,15,15,0">
                        <!-- Drawing Settings -->
                        <GroupBox Header="// DRAWING">
                            <StackPanel>
                                <!-- Brush Color -->
                                <Grid Margin="0,0,0,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                              Text="BRUSH COLOR" 
                                              Foreground="#00FFFF" 
                                              FontWeight="Bold"
                                              FontSize="11"
                                              FontFamily="Consolas"
                                              VerticalAlignment="Center"/>
                                    <StackPanel Grid.Column="1" 
                                               Orientation="Horizontal">
                                        <Border x:Name="ColorPreview" 
                                               Width="48" 
                                               Height="48"
                                               BorderBrush="#00FFFF"
                                               BorderThickness="2"
                                               Margin="0,0,16,0">
                                            <Border.Effect>
                                                <DropShadowEffect Color="#00FFFF" 
                                                                Opacity="0.6" 
                                                                BlurRadius="12" 
                                                                ShadowDepth="0"/>
                                            </Border.Effect>
                                        </Border>
                                        <Button x:Name="ChooseColorButton"
                                               Content="SELECT"
                                               Style="{StaticResource ModernButton}"
                                               Click="ChooseColorButton_Click"
                                               VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Brush Thickness -->
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                              Text="THICKNESS" 
                                              Foreground="#00FFFF" 
                                              FontWeight="Bold"
                                              FontSize="11"
                                              FontFamily="Consolas"
                                              VerticalAlignment="Center"/>
                                    <StackPanel Grid.Column="1" 
                                               Orientation="Horizontal">
                                        <Slider x:Name="ThicknessSlider"
                                               Width="300"
                                               Minimum="1"
                                               Maximum="20"
                                               TickFrequency="1"
                                               IsSnapToTickEnabled="True"
                                               ValueChanged="ThicknessSlider_ValueChanged"
                                               Foreground="#FF0080"
                                               VerticalAlignment="Center"/>
                                        <Border Background="#FF0080"
                                               BorderBrush="#FF1493"
                                               BorderThickness="1"
                                               Padding="12,6"
                                               Margin="16,0,0,0">
                                            <Border.Effect>
                                                <DropShadowEffect Color="#FF0080" 
                                                                Opacity="0.7" 
                                                                BlurRadius="10" 
                                                                ShadowDepth="0"/>
                                            </Border.Effect>
                                            <TextBlock x:Name="ThicknessValueText"
                                                      Text="3 px"
                                                      Foreground="White"
                                                      FontWeight="Bold"
                                                      FontFamily="Consolas"
                                                      FontSize="12"
                                                      MinWidth="45"
                                                      TextAlignment="Center"/>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                                
                                <!-- Min/Max Thickness Range -->
                                <Grid Margin="0,16,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                              Text="RANGE" 
                                              Foreground="#00FFFF" 
                                              FontWeight="Bold"
                                              FontSize="11"
                                              FontFamily="Consolas"
                                              VerticalAlignment="Center"/>
                                    <StackPanel Grid.Column="1" 
                                               Orientation="Horizontal">
                                        <!-- MIN Control -->
                                        <TextBlock Text="MIN:"
                                                  Foreground="#808080"
                                                  FontFamily="Consolas"
                                                  FontSize="11"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,8,0"/>
                                        <Border BorderBrush="#00FFFF"
                                               BorderThickness="1"
                                               Background="#1A1A2E">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="50"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBox x:Name="MinThicknessTextBox"
                                                        Grid.Column="0"
                                                        Background="Transparent"
                                                        Foreground="White"
                                                        BorderThickness="0"
                                                        FontFamily="Consolas"
                                                        FontSize="12"
                                                        VerticalAlignment="Center"
                                                        TextAlignment="Center"
                                                        Height="32"
                                                        PreviewTextInput="NumericTextBox_PreviewTextInput"
                                                        TextChanged="MinThicknessTextBox_TextChanged"/>
                                                <StackPanel Grid.Column="1" 
                                                           Width="20"
                                                           Background="#0D111D">
                                                    <Button x:Name="MinUpButton"
                                                           Content="+"
                                                           Click="MinUpButton_Click"
                                                           Height="16"
                                                           Padding="0"
                                                           FontSize="10"
                                                           FontWeight="Bold"
                                                           FontFamily="Consolas"
                                                           Background="#1A1A2E"
                                                           Foreground="#00FFFF"
                                                           BorderThickness="0"
                                                           Cursor="Hand"/>
                                                    <Button x:Name="MinDownButton"
                                                           Content="-"
                                                           Click="MinDownButton_Click"
                                                           Height="16"
                                                           Padding="0"
                                                           FontSize="10"
                                                           FontWeight="Bold"
                                                           FontFamily="Consolas"
                                                           Background="#1A1A2E"
                                                           Foreground="#00FFFF"
                                                           BorderThickness="0"
                                                           Cursor="Hand"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                        
                                        <!-- MAX Control -->
                                        <TextBlock Text="MAX:"
                                                  Foreground="#808080"
                                                  FontFamily="Consolas"
                                                  FontSize="11"
                                                  VerticalAlignment="Center"
                                                  Margin="16,0,8,0"/>
                                        <Border BorderBrush="#00FFFF"
                                               BorderThickness="1"
                                               Background="#1A1A2E">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="50"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBox x:Name="MaxThicknessTextBox"
                                                        Grid.Column="0"
                                                        Background="Transparent"
                                                        Foreground="White"
                                                        BorderThickness="0"
                                                        FontFamily="Consolas"
                                                        FontSize="12"
                                                        VerticalAlignment="Center"
                                                        TextAlignment="Center"
                                                        Height="32"
                                                        PreviewTextInput="NumericTextBox_PreviewTextInput"
                                                        TextChanged="MaxThicknessTextBox_TextChanged"/>
                                                <StackPanel Grid.Column="1" 
                                                           Width="20"
                                                           Background="#0D111D">
                                                    <Button x:Name="MaxUpButton"
                                                           Content="+"
                                                           Click="MaxUpButton_Click"
                                                           Height="16"
                                                           Padding="0"
                                                           FontSize="10"
                                                           FontWeight="Bold"
                                                           FontFamily="Consolas"
                                                           Background="#1A1A2E"
                                                           Foreground="#00FFFF"
                                                           BorderThickness="0"
                                                           Cursor="Hand"/>
                                                    <Button x:Name="MaxDownButton"
                                                           Content="-"
                                                           Click="MaxDownButton_Click"
                                                           Height="16"
                                                           Padding="0"
                                                           FontSize="10"
                                                           FontWeight="Bold"
                                                           FontFamily="Consolas"
                                                           Background="#1A1A2E"
                                                           Foreground="#00FFFF"
                                                           BorderThickness="0"
                                                           Cursor="Hand"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                                
                                <TextBlock Text="// Use mouse wheel while drawing"
                                          Foreground="#606060"
                                          FontSize="10"
                                          FontFamily="Consolas"
                                          Margin="140,4,0,0"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Hotkey Settings -->
                        <GroupBox Header="// HOTKEY">
                            <StackPanel>
                                <!-- Current Hotkey Display -->
                                <Border Background="#1A1A2E"
                                       BorderBrush="#00FFFF"
                                       BorderThickness="2"
                                       Padding="16,12"
                                       Margin="0,0,0,16">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#00FFFF" 
                                                        Opacity="0.5" 
                                                        BlurRadius="12" 
                                                        ShadowDepth="0"/>
                                    </Border.Effect>
                                    <StackPanel>
                                        <TextBlock Text="CURRENT HOTKEY:"
                                                  Foreground="#808080"
                                                  FontSize="10"
                                                  FontFamily="Consolas"
                                                  Margin="0,0,0,4"/>
                                        <TextBlock x:Name="CurrentHotkeyText"
                                                  Text="Ctrl + Alt + D"
                                                  Foreground="#00FFFF"
                                                  FontSize="16"
                                                  FontWeight="Bold"
                                                  FontFamily="Consolas"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Recorder Box (hidden by default) -->
                                <Border x:Name="RecorderBox"
                                       Background="#0A0E27"
                                       BorderBrush="#FF0080"
                                       BorderThickness="2"
                                       Padding="20"
                                       Margin="0,0,0,16"
                                       Visibility="Collapsed">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#FF0080" 
                                                        Opacity="0.8" 
                                                        BlurRadius="20" 
                                                        ShadowDepth="0"/>
                                    </Border.Effect>
                                    <StackPanel>
                                        <TextBlock x:Name="RecorderStatusText"
                                                  Text="🎤 RECORDING... Press your hotkey combination"
                                                  Foreground="#FF0080"
                                                  FontSize="14"
                                                  FontWeight="Bold"
                                                  FontFamily="Consolas"
                                                  TextAlignment="Center"
                                                  Margin="0,0,0,12"/>
                                        <TextBlock x:Name="RecorderPreviewText"
                                                  Text="Waiting for keys..."
                                                  Foreground="#00FFFF"
                                                  FontSize="18"
                                                  FontWeight="Bold"
                                                  FontFamily="Consolas"
                                                  TextAlignment="Center"
                                                  MinHeight="30"/>
                                        <TextBlock Text="// Press ESC to cancel"
                                                  Foreground="#606060"
                                                  FontSize="10"
                                                  FontFamily="Consolas"
                                                  TextAlignment="Center"
                                                  Margin="0,8,0,0"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Buttons -->
                                <StackPanel Orientation="Horizontal" 
                                           HorizontalAlignment="Center">
                                    <Button x:Name="RecordButton"
                                           Content="🎤 RECORD NEW HOTKEY"
                                           Style="{StaticResource ModernButton}"
                                           Click="RecordButton_Click"
                                           Margin="0,0,12,0"/>
                                    <Button x:Name="CancelRecordButton"
                                           Content="CANCEL"
                                           Visibility="Collapsed"
                                           Click="CancelRecord_Click"
                                           Background="#1A2A6D"
                                           Foreground="#808080"
                                           BorderBrush="#404040"
                                           BorderThickness="1"
                                           Padding="20,12"
                                           FontSize="12"
                                           FontWeight="Bold"
                                           FontFamily="Consolas"
                                           Cursor="Hand"
                                           Margin="0,0,12,0">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border"
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="BorderBrush" Value="#808080"/>
                                                        <Setter Property="Foreground" Value="#FFFFFF"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    <Button x:Name="ApplyHotkeyButton"
                                           Content="✓ APPLY"
                                           Visibility="Collapsed"
                                           Click="ApplyHotkey_Click"
                                           Style="{StaticResource ModernButton}"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>

                        <!-- Drawing Mode -->
                        <GroupBox Header="// MODE">
                            <StackPanel>
                                <CheckBox x:Name="LockModeCheckBox"
                                         Content="LOCK DRAWING MODE"
                                         Foreground="#FF0080"
                                         FontWeight="Bold"
                                         FontFamily="Consolas"
                                         FontSize="12"
                                         Checked="LockModeCheckBox_Changed"
                                         Unchecked="LockModeCheckBox_Changed"
                                         Margin="0,0,0,16"/>
                                <Border Background="#0A0E27"
                                       BorderBrush="#404040"
                                       BorderThickness="1"
                                       Padding="16">
                                    <StackPanel>
                                        <TextBlock Foreground="#B0B0B0"
                                                  FontSize="11"
                                                  FontFamily="Consolas"
                                                  TextWrapping="Wrap"
                                                  Margin="0,0,0,8"
                                                  LineHeight="16">
                                            <Run Text="[ON]" Foreground="#00FF00" FontWeight="Bold"/>
                                            <Run Text=" Press once to lock, press again to unlock"/>
                                        </TextBlock>
                                        <TextBlock Foreground="#B0B0B0"
                                                  FontSize="11"
                                                  FontFamily="Consolas"
                                                  TextWrapping="Wrap"
                                                  LineHeight="16">
                                            <Run Text="[OFF]" Foreground="#FF6B6B" FontWeight="Bold"/>
                                            <Run Text=" Hold to draw, release to clear"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </GroupBox>

                        <!-- Logging -->
                        <GroupBox Header="// LOGS">
                            <StackPanel>
                                <Grid Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                              Text="LOG LEVEL" 
                                              Foreground="#00FFFF"
                                              FontWeight="Bold"
                                              FontSize="11"
                                              FontFamily="Consolas"
                                              VerticalAlignment="Center"/>
                                    <ComboBox Grid.Column="1"
                                             x:Name="LogLevelComboBox" 
                                             SelectionChanged="LogLevelComboBox_SelectionChanged"
                                             Height="40"/>
                                </Grid>
                                <TextBlock x:Name="LogLevelDescription" 
                                          Margin="0,0,0,16" 
                                          TextWrapping="Wrap"
                                          Foreground="#808080"
                                          FontSize="11"
                                          FontFamily="Consolas"
                                          LineHeight="16"/>
                                <Button x:Name="OpenLogFolderButton" 
                                       Content="OPEN FOLDER" 
                                       Click="OpenLogFolderButton_Click"
                                       Style="{StaticResource ModernButton}"
                                       HorizontalAlignment="Left"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Cyberpunk Action Buttons -->
                        <Grid Margin="0,12,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Button Grid.Column="1"
                                   Content="RESET"
                                   Click="ResetButton_Click"
                                   Margin="0,0,12,0"
                                   Padding="20,12"
                                   Background="#1A1A2E"
                                   Foreground="#808080"
                                   BorderBrush="#404040"
                                   BorderThickness="1"
                                   FontSize="12"
                                   FontWeight="Bold"
                                   FontFamily="Consolas"
                                   Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="BorderBrush" Value="#808080"/>
                                                <Setter Property="Foreground" Value="#FFFFFF"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            
                            <Button Grid.Column="2"
                                   Content="DONE"
                                   Click="CloseButton_Click"
                                   Style="{StaticResource ModernButton}"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
