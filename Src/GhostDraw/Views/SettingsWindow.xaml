<Window x:Class="GhostDraw.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:GhostDraw.Views.UserControls"
        xmlns:vm="clr-namespace:GhostDraw.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:SettingsViewModel, IsDesignTimeCreatable=False}"
        Title="GhostDraw Settings" 
        Height="800" 
        Width="740"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <!-- Main container -->
    <Grid Margin="30">
        <!-- Blurred background border for subtle glow effect - positioned to overlap the main border -->
        <Border CornerRadius="0" 
                BorderThickness="10"
                Opacity="0.9">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF0080" Offset="0"/>
                    <GradientStop Color="#00FFFF" Offset="0.5"/>
                    <GradientStop Color="#FF0080" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Effect>
                <BlurEffect Radius="20"/>
            </Border.Effect>
        </Border>

        <!-- Main window content -->
        <Border CornerRadius="0" 
                BorderThickness="2">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF0080" Offset="0"/>
                    <GradientStop Color="#00FFFF" Offset="0.5"/>
                    <GradientStop Color="#FF0080" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#0A0E27" Offset="0.0"/>
                    <GradientStop Color="#16213E" Offset="0.5"/>
                    <GradientStop Color="#0A0E27" Offset="1.0"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Cyberpunk Title Bar -->
                <Border Grid.Row="0" 
                        Height="70"
                        BorderThickness="0,0,0,2"
                        MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                    <Border.BorderBrush>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#FF0080" Offset="0"/>
                            <GradientStop Color="#00FFFF" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0" Opacity="0.3">
                            <GradientStop Color="#FF0080" Offset="0"/>
                            <GradientStop Color="#00FFFF" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Logo and Cyberpunk Title -->
                        <StackPanel Grid.Column="0" 
                                   Orientation="Horizontal" 
                                   Margin="24,0,0,0" 
                                   VerticalAlignment="Center">
                            <Image Source="pack://application:,,,/Assets/ghost-draw-icon.png" 
                                   Width="48"
                                   Height="48"
                                   Margin="0,0,12,0"
                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                            <StackPanel>
                                <TextBlock FontSize="20" 
                                           FontWeight="Bold" 
                                           FontFamily="Segoe UI">
                                    <Run Text="GHOST" Foreground="#FF0080"/>
                                    <Run Text="DRAW" Foreground="#00FFFF"/>
                                </TextBlock>
                                <TextBlock Text="// SETTINGS //" 
                                           FontSize="10" 
                                           Foreground="#808080"
                                           FontFamily="Consolas"
                                           Margin="0,-4,0,0"
                                           FontWeight="Bold"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Neon Close Button -->
                        <Button Grid.Column="2" 
                                Content="X" 
                                Style="{StaticResource CloseButton}"
                                Click="CloseButton_Click"
                                Margin="0,0,16,0"
                                ToolTip="Close"/>
                    </Grid>
                </Border>

                <!-- Content Area (Scrollable) -->
                <ScrollViewer Grid.Row="1" 
                             VerticalScrollBarVisibility="Auto"
                             Margin="28,12,28,12">
                    <ScrollViewer.Resources>
                        <Style TargetType="ScrollViewer">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ScrollViewer">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <ScrollContentPresenter Grid.Column="0"/>
                                            <ScrollBar Grid.Column="1" 
                                                      x:Name="PART_VerticalScrollBar"
                                                      Style="{StaticResource CyberScrollBar}"
                                                      Value="{TemplateBinding VerticalOffset}"
                                                      Maximum="{TemplateBinding ScrollableHeight}"
                                                      ViewportSize="{TemplateBinding ViewportHeight}"
                                                      Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"
                                                      Margin="10,0,0,0"/>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ScrollViewer.Resources>

                    <StackPanel Margin="0,15,15,0">
                        <!-- Drawing Settings -->
                        <uc:DrawingSettingsControl AppSettings="{Binding AppSettings}"/>

                        <!-- Hotkey Settings -->
                        <uc:HotkeySettingsControl 
                            AppSettings="{Binding AppSettings}"
                            LoggerFactory="{Binding LoggerFactory}"/>

                        <!-- Mode Settings -->
                        <uc:ModeSettingsControl AppSettings="{Binding AppSettings}"/>

                        <!-- Screenshot Settings -->
                        <uc:ScreenshotSettingsControl AppSettings="{Binding AppSettings}"/>

                        <!-- Logging Settings -->
                        <uc:LoggingSettingsControl LoggingSettings="{Binding LoggingSettings}"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- Fixed Footer with Action Buttons -->
                <Border Grid.Row="2"
                       BorderThickness="0,2,0,0"
                       Padding="28,16,28,28">
                    <Border.BorderBrush>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#FF0080" Offset="0"/>
                            <GradientStop Color="#00FFFF" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Version Number in Bottom-Left -->
                        <TextBlock Grid.Column="0"
                                  Text="{Binding Version, StringFormat='GhostDraw {0}'}"
                                  FontSize="11"
                                  FontFamily="Consolas"
                                  Foreground="#606060"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Left"/>

                        <Button Grid.Column="1"
                               Content="RESET"
                               Click="ResetButton_Click"
                               Margin="0,0,12,0"
                               Padding="20,12"
                               Background="Transparent"
                               Foreground="#808080"
                               BorderBrush="#404040"
                               BorderThickness="1"
                               FontSize="12"
                               FontWeight="Bold"
                               FontFamily="Consolas"
                               Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="BorderBrush" Value="#808080"/>
                                            <Setter Property="Foreground" Value="#FFFFFF"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button Grid.Column="2"
                               Content="SAVE &amp; CLOSE"
                               Click="CloseButton_Click"
                               Style="{StaticResource ModernButton}"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
